@using EpiManager.DAL
@model EpiManager.Models.Appointment

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Appointment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.Date, "{0:dd/MM/yyyy}", new { placeholder = "Now", @class = "datepicker form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(a => a.CustomerId, new { id = "CustomerSelect2" })
                @Html.ValidationMessageFor(model => model.CustomerId, "აირჩიეთ კლიენტი", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriceHeaderId, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("PriceHeaderId", null, htmlAttributes: new {@class = "form-control ignore"})
                @Html.ValidationMessageFor(model => model.PriceHeaderId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BodyParts, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBoxFor(model => model.BodyParts, ContextHelper.BodyPartsLookup(), new {placeholder = "None", @class = "form-control"})
                @Html.ValidationMessageFor(model => model.BodyParts, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/plugins")
    @Scripts.Render("~/bundles/epi")

    <script type="text/javascript">
        function newUserPopup(evt) {
            if (evt && evt.val === "-1") {
                alert('create new user !');
            };
        };



        $(function() {
            Main.configureDatePicker();
            $("select:not(.ignore)").select2({ width: "resolve" });

            //var $eventSelect = $(".select2-customer");
            //$eventSelect.on("change", function (e) { newUserPopup(e); });

            $("#CustomerSelect2").select2({
                width: "resolve",
                minimumInputLength: 2,
                quietMillis: 250,
                ajax: {
                    url: '@Url.Action("Customers", "Epi")',
                    dataType: 'json',
                    data: function(term) {
                        return {
                            searchTerm: term
                        };
                    },
                    results: function(data) {
                        return { results: data };
                    }
                }
            }).on("change", function (e) { newUserPopup(e); });
        });
    </script>
}
